    <script>
        //loader js
        function hideLoader() {
            let l_b = document.getElementById('loader_bg');
            l_b.style.display = 'none';
        }
        setTimeout(hideLoader, 5 * 100);


        function form_submited() {
            alert("Your Request Submitted Successfully!!,Wait Until We Found Best Auto-driver For You..");
        }

        function confirm_driver() {
            alert("Your Ride Confirmed!!,Auto-driver Will Call You Soon To Confirmation..");
        }

        // set min and max of date
        var today = new Date();
        var tomorrow = new Date();
        tomorrow.setDate(today.getDate() + 3);

        document.getElementById("date").setAttribute("min", formatDate(today));
        document.getElementById("date").setAttribute("max", formatDate(tomorrow));

        // formate the date YYYY-MM-DD
        function formatDate(date) {
            var year = date.getFullYear();
            var month = ("0" + (date.getMonth() + 1)).slice(-2);
            var day = ("0" + date.getDate()).slice(-2);
            return year + "-" + month + "-" + day;
        }

