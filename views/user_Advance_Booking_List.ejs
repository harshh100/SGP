    <script>
        //loader js
        function hideLoader() {
            let l_b = document.getElementById('loader_bg');
            l_b.style.display = 'none';
        }
        setTimeout(hideLoader, 5 * 100);
    </script>
</head>

<body>
    <div class="loader_bg" id="loader_bg">
        <div class="loader"><img src="../images/cabby_logo_TRA.gif" width="100px" alt="#" /></div>
    </div>
    <header>
        <div class="navcontainer">
            <ul class="btns">
                <li class="ul_item" class="nav-itm">

                    <div class="nav-icon">
                        <img src="../images/cabby_logo_TRA.png" width="25px" alt="">
                        <a href="/" id="ad_booking" class="nav-itm" class="text">Home</a>
                    </div>

                </li>
                <li class="ul_item" class="nav-itm">
                    <div class="nav-icon">
                        <img src="../images/account-solid.gif" width="25px" alt="">
                        <p id="userName" class="nav-itm" class="text">
                            <%= username %>
                        </p>
                    </div>
                </li>
                <li class="ul_item" class="nav-itm">
                    <div class="active">
                        <div class="nav-icon">
                            <img src="../images/assignment-solid.gif" width="25px" alt="">
                            <a href="/Advance_Booking" id="ad_booking" class="nav-itm" class="text">Your
                                Advance Booking List</a>
                        </div>
                    </div>
                </li>
                <li class="ul_item" class="nav-itm">
                    <div class="nav-icon">
                        <img src="../images/28-info-solid.gif" width="25px" alt="">
                        <a href="/info" id="info" class="nav-itm" class="text">Info</a>
                    </div>
                </li>
                <li class="ul_item" class="nav-itm">
                    <div class="nav-icon">
                        <img src="../images/logout.png" width="25px" alt="">
                        <a href="/logout" id="info" class="nav-itm" class="text">Logout</a>

                    </div>
                </li>
            </ul>
        </div>
    </header>

    <div class="cf_con">
        <center>
            <h1 class="cf_head">Your Upcoming/Past Trip</h1>
        </center>
        <div class="cf-list_con">
            <% for(let i=Adv_B_l.length-1;i>=0;i--){ %>
                <% if(!Adv_B_l[i]){ %>
                    <div id="beforeclick">
                        <h1>empty!!</h1>
                    </div>
                    <% }else if(i%2==0){ %>

                        <div class="cf-list-itm0">
                            <div class="tripd">
                                <div class="trip-itm">
                                    <p>Driver Name : <span>
                                            <%=Adv_B_l[i].sen_name%>
                                        </span></p>
                                </div>
                                <div class="trip-itm">
                                    <p>Pick-up : <span>
                                            <%=Adv_B_l[i].from%>
                                        </span></p>
                                </div>
                                <div class="trip-itm">
                                    <p>Drop : <span>
                                            <%=Adv_B_l[i].to%>
                                        </span></p>
                                </div>
                                <div class="trip-itm time">
                                    <p>Date : <span>
                                            <%=Adv_B_l[i].date%> <span> / Time </span>
                                        </span> <span>
                                            <%=Adv_B_l[i].time%>
                                        </span></p>
                                </div>
                                <div class="inlinecon">
                                    <div class="trip-itm Passengers psg_pri-fb">
                                        <p>Passengers : <span>
                                                <%=Adv_B_l[i].passengers%>
                                            </span></p>
                                    </div>
                                    <div class="trip-itm Price psg_pri-fb">
                                        <p>Price : <span>
                                                <%=Adv_B_l[i].price%> ruppes
                                            </span> </p>
                                    </div>
                                </div>
                                <div class="trip-itm Cancel">
                                    <button
                                        onclick="cancelRide('<%= Adv_B_l[i].date %>', '<%= Adv_B_l[i].time %>', '<%= i %>')"
                                        id="cancelButton<%= i %>" class="cancel-btn" data-date="<%= Adv_B_l[i].date %>"
                                        data-time="<%= Adv_B_l[i].time %>">
                                        Cancel Ride
                                    </button>

                                </div>
                                <div class="trip-itm Remove">
                                    <button onclick="RemoveRide('<%= i %>')" id="RemoveButton<%= i %>"
                                        class="Remove-btn" data-date="<%= Adv_B_l[i].date %>"
                                        data-time="<%= Adv_B_l[i].time %>">
                                        Remove Ride
                                    </button>
                                </div>
                            </div>
                        </div>
                        <% }else{ %>
                            <div class="cf-list-itm1">
                                <div class="tripd">
                                    <div class="trip-itm">
                                        <p>Driver Name : <span>
                                                <%=Adv_B_l[i].sen_name%>
                                            </span></p>
                                    </div>
                                    <div class="trip-itm">
                                        <p>Pick-up : <span>
                                                <%=Adv_B_l[i].from%>
                                            </span></p>
                                    </div>
                                    <div class="trip-itm">
                                        <p>Drop : <span>
                                                <%=Adv_B_l[i].to%>
                                            </span></p>
                                    </div>
                                    <div class="trip-itm time">
                                        <p>Date : <span>
                                                <%=Adv_B_l[i].date%> <span> / Time </span>
                                            </span> <span>
                                                <%=Adv_B_l[i].time%>
                                            </span></p>
                                    </div>
                                    <div class="inlinecon">
                                        <div class="trip-itm Passengers psg_pri-fb">
                                            <p>Passengers : <span>
                                                    <%=Adv_B_l[i].passengers%>
                                                </span></p>
                                        </div>
                                        <div class="trip-itm Price psg_pri-fb">
                                            <p>Price : <span>
                                                    <%=Adv_B_l[i].price%>ruppes
                                                </span> </p>
                                        </div>
                                    </div>
                                    <div class="trip-itm Cancel">
                                        <button
                                            onclick="cancelRide('<%= Adv_B_l[i].date %>', '<%= Adv_B_l[i].time %>', '<%= i %>')"
                                            id="cancelButton<%= i %>" class="cancel-btn"
                                            data-date="<%= Adv_B_l[i].date %>" data-time="<%= Adv_B_l[i].time %>">
                                            Cancel Ride
                                        </button>
                                    </div>
                                    <div class="trip-itm Remove">
                                        <button onclick="RemoveRide('<%= i %>')" id="RemoveButton<%= i %>"
                                            class="Remove-btn" data-date="<%= Adv_B_l[i].date %>"
                                            data-time="<%= Adv_B_l[i].time %>">
                                            Remove Ride
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <%}%>
                                <% }%>
        </div>
    </div>
</body>
<script>
    function cancelRide(date, time, index) {
        // Get current time and booking time
        const bookingTime = new Date(`${date} ${time}`);
        const currentTime = new Date();

        // Check if it's within 2 hours of booking time
        const timeDifference = (bookingTime - currentTime) / (1000 * 60 * 60);
        if (timeDifference <= 2) {
            alert("Cannot cancel within 2 hours of ride time.");
            return;
        }

        fetch("/cancelRide", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ index })
        })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    document.getElementById(`cancelButton${index}`).disabled = true;
                    alert("Ride canceled successfully.");
                    window.location.reload();
                } else {
                    alert(data.message);
                }
            })
            .catch(error => console.error("Error:", error));

    }

    function RemoveRide(index) {
        fetch("/removeRide", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ index })
        })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    document.getElementById(`RemoveButton${index}`).disabled = true;
                    alert("Ride removed successfully.");
                    window.location.reload();
                    // Optionally, remove the trip item from the DOM
                    document.getElementById(`trip${index}`).style.display = "none";
                } else {
                    alert(data.message);
                }
            })
            .catch(error => console.error("Error:", error));
    }


    document.querySelectorAll('.cancel-btn').forEach(button => {
        const date = button.getAttribute('data-date');
        const time = button.getAttribute('data-time');
        const bookingTime = new Date(`${date} ${time}`);
        const currentTime = new Date();
        const timeDifference = (bookingTime - currentTime) / (1000 * 60 * 60);

        if (timeDifference <= 2) {
            button.style.display = 'none';
        }
    });

    document.querySelectorAll('.Remove-btn').forEach((button, index) => {
        const date = button.getAttribute('data-date');
        const time = button.getAttribute('data-time');
        const bookingTime = new Date(`${date} ${time}`);
        const currentTime = new Date();

        // Hide button if the trip date/time is in the future
        if (bookingTime > currentTime) {
            button.style.display = 'none';
        } else {
            button.onclick = () => RemoveRide(index);
        }
    });
</script>


</html>